{
  "manifest_version": 2,
  "name": "MAC Address Fetcher",
  "version": "1.0",
  "description": "Fetches the MAC address of the device.",
  "permissions": ["nativeMessaging", "activeTab"],
  "background": {
    "scripts": ["./src/utils/get-mac-address/background.ts"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./public/popup.html",
    "default_icon": "icon.png"
  },
  "externally_connectable": {
       "matches": ["*://*.google.com/*"],
       "accept_tls_channel_id": true
   }
}
